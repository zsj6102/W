<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x596"
    android:layout_height="@dimen/y286"
    android:background="@mipmap/dail_back"
    android:orientation="vertical">


    <LinearLayout

        android:layout_marginTop="@dimen/y84"


        android:id="@+id/layoutleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <TextView
            android:layout_marginLeft="@dimen/x114"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数宝宝"
            android:textSize="@dimen/x32"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_marginRight="@dimen/x114"
            android:layout_marginLeft="@dimen/x48"
            android:id="@+id/phone"
            android:textSize="@dimen/x32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18016638916"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
         android:layout_marginTop="@dimen/y74"

        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:layout_marginBottom="@dimen/y44"
            android:layout_marginLeft="@dimen/x96"
            android:id="@+id/btn_phone"
            android:layout_width="@dimen/x111"
            android:layout_height="@dimen/y52"
            android:background="@mipmap/dail_btn"
            android:text="拨号"
            android:gravity="center"
            android:textSize="@dimen/x32"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_marginBottom="@dimen/y44"
            android:layout_marginLeft="@dimen/x182"
            android:layout_marginRight="@dimen/x96"
            android:id="@+id/btn_cancel"
            android:gravity="center"
            android:layout_width="@dimen/x111"
            android:layout_height="@dimen/y52"
            android:background="@mipmap/dail_btn"
            android:text="取消"
            android:textSize="@dimen/x32"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>